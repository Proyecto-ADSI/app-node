                                    <div>
                                        <i class="fa fa-power-off"></i> Tema Oscuro
                                    </div>
                                    <div id="switch_input" class="switch" data-theme="Blanco">
                                        <label>
                                            <input type="checkbox">
                                            <span class="lever"></span>
                                        </label>
                                    </div>
                                </div>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/Logout"><i class="fa fa-power-off"></i>
