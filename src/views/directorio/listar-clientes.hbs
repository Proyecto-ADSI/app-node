<!-- Modal Editar -->
<div class="modal fade ModalEditar" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
    style="display: none;">
    <div class="modal-dialog modal-lg" style="max-width: 1000px">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">
                    Editar Cliente
                </h4>

                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">

                <div class="card">
                    <div class="card-body wizard-content">

                        <form id="Form_Editar_Clientes" class="wizard-circle">
                            <!-- Step 1 -->
                            <h6>Información de contacto</h6>
                            <section>
                                <h3 class="box-title">Empresa</h3>
                                <hr class="m-t-0 m-b-20">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">NIT:

                                            </label>
                                            <input type="text" id="txtNIT_E" name="txtNIT_E" class="form-control"
                                                placeholder="12345678-9">
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Razón social:
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" name="txtRazonSocial_E" id="txtRazonSocial_E"
                                                class="form-control form-control-danger" placeholder="Empresa S.A">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="emailAddress1"> Teléfono:
                                                <span class="text-danger">*</span>
                                            </label>
                                            <input type="number" class="form-control" id="txtTelefono_E"
                                                name="txtTelefono_E" placeholder="4123456">
                                        </div>
                                    </div>
                                </div>
                                <h3 class="box-title">Ubicación</h3>
                                <hr class="m-t-0 m-b-20">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">País:</label>
                                            <select name="txtPais_E" id="txtPais_E"
                                                class="select2 form-control custom-select"
                                                style="width: 100%; height:36px;">
                                                <option selected disabled>Seleccione...</option>

                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Departamento:</label>
                                            <select name="txtDepartamento_E" id="txtDepartamento_E"
                                                class="select2 form-control custom-select"
                                                style="width: 100%; height:36px;">
                                                <option selected disabled>Seleccione...</option>

                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Municipio:</label>
                                            <select name="txtMunicipio_E" id="txtMunicipio_E"
                                                class="select2 form-control custom-select"
                                                style="width: 100%; height:36px;">
                                                <option selected disabled>Seleccione...</option>

                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <!-- /Row -->
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Barrio o Vereda</label>
                                            <select name="txtSubTipo_E" id="txtSubTipo_E"
                                                class="select2 form-control custom-select"
                                                style="width: 100%; height:36px;">
                                                <option selected disabled>Seleccione...</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Nombre Lugar</label>
                                            <select name="txtNombre_Lugar_E" id="txtNombre_Lugar_E"
                                                class="select2 form-control custom-select"
                                                style="width: 100%; height:36px;">
                                                <option selected disabled>Seleccione...</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="emailAddress1"> Dirección:</label>
                                            <input type="text" class="form-control" id="txtDireccion_E"
                                                name="txtDireccion_E" placeholder="Calle 1 # 1 - 1">
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <!-- Step 2 -->
                            <h6>Datos básicos líneas</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Operador</label>
                                            <select name="txtOperador_E" id="txtOperador_E"
                                                class="select2 form-control custom-select"
                                                style="width: 100%; height:36px;">
                                                <option selected disabled>Seleccione...</option>
                                                <option value="1">Movistar</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="int1">Encargado:</label>
                                            <input type="text" class="form-control" id="txtEncargado_E"
                                                name="txtEncargado_E" placeholder="Jhon Doe">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="int1">Teléfono de contacto:</label>
                                            <input type="text" class="form-control" id="txtTelefono_Contacto_E"
                                                name="txtTelefono_Contacto_E" placeholder="3123456789 | 4123456">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="int1">Extensión:</label>
                                            <input type="number" class="form-control" id="txtExtension_E"
                                                name="txtExtension_E" placeholder="123">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="int1 ">Número de líneas:</label>
                                            <input type="number" class="form-control" id="txtCantidad_Lineas_E"
                                                name="txtCantidad_Lineas_E" placeholder="10">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">
                                                Pago <strong>mensual:</strong>
                                            </label>
                                            <input id="txtValor_Mensual_E" type="text" name="txtValor_Mensual_E"
                                                class=" form-control" placeholder="100000"
                                                data-bts-button-down-class="btn btn-secondary btn-outline"
                                                data-bts-button-up-class="btn btn-secondary btn-outline">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="int1 ">Cantidad de minutos:</label>
                                            <input type="text" class="form-control" id="txtMinutos_E"
                                                name="txtMinutos_E" placeholder="300 minutos todo operador">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="jobTitle2 ">Cantidad navegación:</label>
                                            <input type="text" class="form-control" id="txtNavegacion_E"
                                                name="txtNavegacion_E" placeholder="1 gb">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="jobTitle2 ">Llamadas internacionales:</label>
                                            <input type="text" class="form-control" id="txtLlamadas_Inter_E"
                                                name="txtLlamadas_Inter_E" placeholder="200 minutos">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="jobTitle2 ">Mensajes de texto:</label>
                                            <input type="text" class="form-control" id="txtMensajes_E"
                                                name="txtMensajes_E" placeholder="300 mensajes">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="jobTitle2 ">Aplicaciones:</label>
                                            <input type="text" class="form-control" id="txtApps_E" name="txtApps_E"
                                                placeholder="Facebook y WhatsApp">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="jobTitle2 ">Roaming internacional:</label>
                                            <input type="text" class="form-control" id="txtRoaming_E"
                                                name="txtRoaming_E" placeholder="Si/No">
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <!-- Step 4 -->
                            <h6>Plan Corporativo</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtFecha_inicio">Fecha del corporativo:</label>
                                            <div class="input-daterange input-group" id="Fecha_DatePicker">
                                                <span class="input-group-addon">Inicio</span>
                                                <input type="text" class="input-sm form-control txtFecha_inicio_E"
                                                    name="txtFecha_inicio_E" id="txtFecha_inicio_E" />
                                                <span class="input-group-addon">Fin</span>
                                                <input type="text" class="input-sm form-control txtFecha_fin_E"
                                                    name="txtFecha_fin_E" id="txtFecha_fin_E" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="participants1">Descripción del
                                                corporativo</label>
                                            <textarea name="txtDescripcion_E" id="txtDescripcion_E" rows="10"
                                                class="form-control" placeholder="Ingresa una descripción"></textarea>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="m-r-5">Cámara de comercio: </label>
                                            <div id="txtCamara_Comercio_Actual"
                                                class="fileinput fileinput-new input-group" data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput">
                                                    <i class="fa fa-file fileinput-exists"></i>
                                                    <span class="fileinput-filename"></span>
                                                </div>
                                                <span
                                                    class="input-group-addon btn btn-secondary btn-file MyStyle_Btn_Docs">
                                                    <span class="fileinput-new">Seleccionar</span>
                                                    <span class="fileinput-exists">Cambiar</span>
                                                    <input type="file" name="txtCamara_Comercio_E"
                                                        id="txtCamara_Comercio_E">
                                                </span>
                                                <a href="#"
                                                    class="input-group-addon btn btn-secondary fileinput-exists MyStyle_Btn_Docs"
                                                    data-dismiss="fileinput">Eliminar</a>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="m-r-5">Cédula de ciudadanía: </label>
                                            <div id="txtCedula_Actual" class="fileinput fileinput-new input-group"
                                                data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput">
                                                    <i class="fa fa-file fileinput-exists"></i>
                                                    <span class="fileinput-filename"></span>
                                                </div>
                                                <span
                                                    class="input-group-addon btn btn-secondary btn-file MyStyle_Btn_Docs">
                                                    <span class="fileinput-new">Seleccionar</span>
                                                    <span class="fileinput-exists">Cambiar</span>
                                                    <input type="file" name="txtCedula_E" id="txtCedula_E">
                                                </span>
                                                <a href="#"
                                                    class="input-group-addon btn btn-secondary fileinput-exists MyStyle_Btn_Docs"
                                                    data-dismiss="fileinput">Eliminar</a>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="m-r-5">Soporte de ingresos: </label>
                                            <div id="txtSoporte_Actual" class="fileinput fileinput-new input-group"
                                                data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput">
                                                    <i class="fa fa-file fileinput-exists"></i>
                                                    <span class="fileinput-filename"></span>
                                                </div>
                                                <span
                                                    class="input-group-addon btn btn-secondary btn-file MyStyle_Btn_Docs">
                                                    <span class="fileinput-new">Seleccionar</span>
                                                    <span class="fileinput-exists">Cambiar</span>
                                                    <input type="file" name="txtSoporte_E" id="txtSoporte_E">
                                                </span>
                                                <a href="#"
                                                    class="input-group-addon btn btn-secondary fileinput-exists MyStyle_Btn_Docs"
                                                    data-dismiss="fileinput">Eliminar</a>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="m-r-5">Detalles plan corporativo: </label>
                                            <div id="txtDetalles_Actual" class="fileinput fileinput-new input-group"
                                                data-provides="fileinput">
                                                <div class="form-control" data-trigger="fileinput">
                                                    <i class="fa fa-file fileinput-exists"></i>
                                                    <span class="fileinput-filename"></span>
                                                </div>
                                                <span
                                                    class="input-group-addon btn btn-secondary btn-file MyStyle_Btn_Docs">
                                                    <span class="fileinput-new">Seleccionar</span>
                                                    <span class="fileinput-exists">Cambiar</span>
                                                    <input type="file" name="txtDetalles_E" id="txtDetalles_E">
                                                </span>
                                                <a href="#"
                                                    class="input-group-addon btn btn-secondary fileinput-exists MyStyle_Btn_Docs"
                                                    data-dismiss="fileinput">Eliminar</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
